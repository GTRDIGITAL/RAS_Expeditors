FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends build-essential libmariadb-dev && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

ENV PYTHONPATH=/app \
    C_FORCE_ROOT=true

CMD ["celery", "-A", "website.tasks.celery", "worker", "--loglevel=info", "--concurrency=2", "--max-tasks-per-child=100"]